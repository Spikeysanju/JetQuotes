<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.JetQuotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/defaultNight</item>
        <item name="colorPrimaryVariant">@color/defaultNightDark</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/defaultNight</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.JetQuotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.JetQuotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.JetQuotes.PopupOverlay" parent="ThemeOverlay.AppCompat.Dark" />

</resources>